              </tr>
            </thead>
            <tbody>
            
              <% users.forEach(function(users) { %>
                <tr>
                  <td><%= users.name%></td>
                  <td><%=users.email%></td>
                </tr>
                <% }); %>
            </tbody>
          </table>
